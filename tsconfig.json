{
  "ts-node": {
    "files": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "trash/"
  ],
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "index.d.ts",
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  }
}