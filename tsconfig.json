{
  "ts-node": {
    "files": true
  },
  "files": [
    "app.ts",
    "./prisma/reset.ts",
    "./src/index.d.ts",
    "eslint.config.mjs"
  ],
  "include": [
    "./playground.ts",
    "./src/tests/*.ts",
    "./src/tests/helpers/app.ts",
    "./src/tests/helpers/helpers.ts",
    "./src/tests/helpers/helpers.test.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "index.d.ts",
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  }
}