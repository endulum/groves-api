{
  "ts-node": {
    "files": true
  },
  "files": [
    "app.ts",
    "./src/index.d.ts",
    "eslint.config.mjs"
  ],
  "include": ["./src/tests/*.ts",],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "typeRoots": ["index.d.ts", "./node_modules/@types"],
    "skipLibCheck": true
  }
}